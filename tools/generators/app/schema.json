{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "app",
  "title": "Qwilt UI project",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "App name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "addE2e": {
      "description": "Should Cypress e2e testing be added",
      "type": "boolean",
      "default": true
    }
  },
  "required": ["name"]
}
